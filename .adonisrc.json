{
  "typescript": true,
  "commands": [
    "./commands",
    "@adonisjs/core/build/commands/index.js",
    "@adonisjs/repl/build/commands",
    "@adonisjs/lucid/build/commands",
    "adonis5-swagger/build/commands",
    "@adonisjs/mail/build/commands"
  ],
  "exceptionHandlerNamespace": "App/Exceptions/Handler",
  "aliases": {
    "App": "app",
    "Config": "config",
    "Database": "database",
    "Contracts": "contracts"
  },
  "directories": {
    "views": "./"
  },
  "preloads": [
    "./start/routes",
    "./start/kernel",
    "./start/Routes/auth",
    "./start/Routes/mail",
    "./start/Routes/export",
    "./start/Routes/rol",
    "./start/Routes/user",
    "./start/Routes/client",
    "./start/Routes/conceptDraw",
    "./start/Routes/groupItem",
    "./start/Routes/groupIItem",
    "./start/Routes/groupIItemVersion",
    "./start/Routes/item",
    "./start/Routes/poject",
    "./start/Routes/master",
    "./start/Routes/versionProject"
  ],
  "providers": [
    "./providers/AppProvider",
    "@adonisjs/core",
    "@adonisjs/lucid",
    "adonis5-swagger",
    "@adonisjs/mail",
    "@adonisjs/view"
  ],
  "aceProviders": [
    "@adonisjs/repl"
  ],
  "tests": {
    "suites": [
      {
        "name": "functional",
        "files": [
          "tests/functional/**/*.spec(.ts|.js)"
        ],
        "timeout": 60000
      },
      {
        "name": "integration",
        "files": [
          "tests/integracion/**/*.test(.ts|.js)"
        ],
        "timeout": 60000
      }
    ]
  },
  "testProviders": [
    "@japa/preset-adonis/TestsProvider"
  ],
  "metaFiles": [
    {
      "pattern": "uploads/**"
    },
    {
      "pattern": "**/*.edge",
      "reloadServer": true
    }
  ],
  "build": {
    "copy": [
      {
        "from": "./app/Domain/Email/Templates",
        "to": "./build/app/Domain/Email/Templates"
      }
    ]
  }
}
